{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "preserveConstEnums": true
  },
  "include":[
    "./src/**/*"
  ]
}